generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id        String       @id @default(cuid())
  name      String
  slug      String       @unique // unique url like /app/my-team
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  members   Membership[] // A workspace has many members

  // New: Stripe Subscription Details
  subscriptionId String?   // The ID from Stripe
  customerId     String?   // The Customer ID from Stripe
  plan           String    @default("FREE") // "FREE" or "PRO"
}

model Membership {
  id          String    @id @default(cuid())
  userId      String    // Clerk User ID
  workspaceId String
  role        String    @default("MEMBER") // "OWNER" or "MEMBER"

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId]) // A user can't be in the same workspace twice
}
