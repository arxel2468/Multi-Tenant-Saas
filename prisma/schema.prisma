generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Workspace {
  id             String       @id @default(cuid())
  name           String
  slug           String       @unique 
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  members        Membership[] 
  invitations    Invitation[] 

  // Subscription Details
  subscriptionId String?   
  customerId     String?   
  plan           String    @default("FREE") 
}

model Membership {
  id          String    @id @default(cuid())
  userId      String    // Clerk User ID
  workspaceId String
  role        String    @default("MEMBER") // "OWNER" or "MEMBER"

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId]) // A user can't be in the same workspace twice
}

model Invitation {
  id          String    @id @default(cuid())
  email       String    // Who are we inviting?
  token       String    @unique // The secret code
  workspaceId String
  status      String    @default("PENDING") // PENDING, ACCEPTED
  createdAt   DateTime  @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([workspaceId, email]) // Can't invite same person twice to same team
}